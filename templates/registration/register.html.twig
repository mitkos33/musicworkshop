{% extends 'admin.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}

    <div class="account-content">
        <div class="login-wrapper">
            <div class="login-content">
                <div class="login-userset">
                    <div class="login-userheading">
                        <h3>Create an Account</h3>
                        <h4>Continue where you left off</h4>
                    </div>


                    {{ form_start(registrationForm) }}
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-lg-6 col-sm-6 col-12">
                                    <div class="form-login">
                                        {{ form_row(registrationForm.email) }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.plainPassword, {
                                            label: 'Password'
                                        }) }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.image) }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.username, {
                                            label : "Име / артистичен псевдоним :"
                                        }) }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.music_role, {
                                            label: "Музикална роля :"
                                        }) }}
                                    </div>
                                    <div class="form-group ">
                                        {{ form_row(registrationForm.webpage, {
                                            label: "Интернет страница / канал в Youtube, Facbook или другаде :"
                                        }) }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.agreeTerms) }}
                                    </div>
                                </div>
                                <div class="col-lg-6 col-sm-6 col-12">


                                    <div class="form-group ">
                                        {{ form_row(registrationForm.youtube, {
                                            label: "Клип в Youtube който ви представя най добре :"
                                        })  }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.mywork1Youtube, {
                                            label: "Ваши произведения 1 :"
                                        })  }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.mywork2Youtube, {
                                            label: "Ваши произведения 2 :"
                                        })  }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.mywork3Youtube, {
                                            label: "Ваши произведения 3 :"
                                        })  }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.mywork4Youtube, {
                                            label: "Ваши произведения 4 :"
                                        })  }}
                                    </div>
                                    <div class="form-login">
                                        {{ form_row(registrationForm.mywork5Youtube, {
                                            label: "Ваши произведения 5 :"
                                        })  }}
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>




                    <div class="form-login">
                        <input type="hidden" name="token" value="{{ csrf_token('registration-item') }}"/>
                        {{ form_row(registrationForm.is_verified)  }}
                        <button type="submit" class="btn btn btn-login">Register</button>
                    </div>
                    {{ form_end(registrationForm) }}
                    {#                        <div class="form-login">#}
                    {#                            <label>Full Name</label>#}
                    {#                            <div class="form-addons">#}
                    {#                                <input type="text" placeholder="Enter your full name">#}
                    {#                                <img src="assets/img/icons/users1.svg" alt="img">#}
                    {#                            </div>#}
                    {#                        </div>#}

                    <div class="signinform text-center">
                        <h4>Already a user? <a href="{{ path("login") }}" class="hover-a">Sign In</a></h4>
                    </div>
                </div>
            </div>
            <div class="login-img">
                <img src="{{ asset("admin/assets/img/login.jpg") }}" alt="img">
            </div>
        </div>
    </div>

{% endblock %}
