{% extends 'base.html.twig' %}

{% block title %}Регистрация{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <h1>Форма за регистрация</h1>

    {{ form_start(registrationForm) }}
        {{ form_row(registrationForm.email) }}
        {{ form_row(registrationForm.plainPassword, {
            label: 'Парола'
        }) }}
        {{ form_row(registrationForm.image) }}
        {{ form_row(registrationForm.username, {
            label : "Име / артистичен псевдоним :"
        }) }}
        {{ form_row(registrationForm.music_role, {
            label: "Музикална роля :"
        }) }}
        {{ form_row(registrationForm.webpage, {
            label: "Интернет страница / канал в Youtube, Facbook или другаде :"
        }) }}
        {{ form_row(registrationForm.youtube, {
            label: "Клип в Youtube който ви представя най добре :"
        })  }}

        {{ form_row(registrationForm.mywork1Youtube, {
            label: "Ваши произведения 1 :"
        })  }}
        {{ form_row(registrationForm.mywork2Youtube, {
            label: "Ваши произведения 2 :"
        })  }}
        {{ form_row(registrationForm.mywork3Youtube, {
            label: "Ваши произведения 3 :"
        })  }}
        {{ form_row(registrationForm.mywork4Youtube, {
            label: "Ваши произведения 4 :"
        })  }}
        {{ form_row(registrationForm.mywork5Youtube, {
            label: "Ваши произведения 5 :"
        })  }}
        {{ form_row(registrationForm.agreeTerms) }}
        <input type="hidden" name="token" value="{{ csrf_token('registration-item') }}"/>
        <button type="submit" class="btn">Изпрати</button>
    {{ form_end(registrationForm) }}
{% endblock %}
